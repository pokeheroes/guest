{
  "functions": {
    "api/index.mjs": {
      "memory": 1024
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "api/index.mjs"
    }
  ],
    "headers": [
    {
      "source": "/",
      "headers" : [
        {
          "key" : "Content-Type",
          "value" : "text/html"
        },
        {
          "key" : "Access-Control-Allow-Origin",
          "value" : "*"
        }
      ]
    },{
      "source": "/(.*)",
      "headers" : [
        {
          "key" : "Access-Control-Allow-Origin",
          "value" : "*"
        }
      ]
    }
  ]
}
